extends ../layout

block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      
    each book in books
      //- article
      //-   h3= book.title
      //-   include by_line
      //-   a(href = "/books/" + book.id) Read More &rarr;
      tr
        td
          a(href=`/books/${book.id}/edit`)= book.title
        td= book.author
        td= book.genre
        td= book.year